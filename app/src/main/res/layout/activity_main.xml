<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ROKUSAN ADDICT"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textColorHighlight="#000000"
            android:textSize="30sp"
            android:translationX="80dp"
            android:translationY="80dp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="REGISTER"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textColorHighlight="#000000"
            android:textSize="30sp"
            android:translationX="140dp"
            android:translationY="90dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="656dp"
            android:layout_margin="2dp">


            <Button
                android:id="@+id/button"
                android:layout_width="176dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#CCFFFFFF"
                android:text="Sign Up"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textColor="#000000"
                android:translationX="20dp"
                android:translationY="500dp"
                app:cornerRadius="10dp"
                app:strokeColor="#FFFFFF" />

            <Button
                android:id="@+id/button4"
                android:layout_width="177dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#CBFFFFFF"
                android:text="Cancel"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textColor="#000000"
                android:translationX="210dp"
                android:translationY="500dp"
                app:cornerRadius="10dp" />


            <FrameLayout
                android:layout_width="349dp"
                android:layout_height="253dp"
                android:background="#FFFFFF"
                android:backgroundTint="#FFFDFD"
                android:backgroundTintMode="src_in"
                android:clickable="false"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:foregroundTint="#000000"
                android:translationX="30dp"
                android:translationY="170dp">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:textSize="20sp"
                    android:translationX="20dp"
                    android:translationY="70dp" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="22dp"
                    android:text="Password"
                    android:textSize="20sp"
                    android:translationX="20dp"
                    android:translationY="150dp" />

                <EditText
                    android:id="@+id/editTextTextPersonName7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:translationX="120dp"
                    android:translationY="60dp" />

                <EditText
                    android:id="@+id/editTextDate2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="date"
                    android:translationX="120dp"
                    android:translationY="140dp" />


                <ViewFlipper
                    android:id="@+id/viewFlipper"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scaleType="fitXY"
                        android:src="@drawable/rokusan1" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY"
                    android:src="@drawable/rokusan2" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="match_parent"
                    android:layout_height="215dp"
                    android:background="#FFFFFF"
                    android:backgroundTint="#FFFFFF"
                    android:foregroundTint="#FFFFFF"
                    android:scaleX="400"
                    android:translationY="20dp"
                    app:srcCompat="@android:drawable/title_bar"
                    app:tint="#FAFAFA" />


                    </ViewFlipper>
            </FrameLayout>
        </RelativeLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>